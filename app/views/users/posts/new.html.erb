<%= form_for(@post) do |f| %>
 	<%= render "users/shared/error_messages", resource: @post %>

  	<div class="field">
    	<%= f.label :value %><br />
    	<%= f.number_field :value, autofocus: true, autocomplete: "value" %>
  	</div>

  	<div class="field">
    	<%= f.label :body %><br />
    	<%= f.text_area :body, autofocus: true, autocomplete: "body" %>
  	</div>

  	<div class="field">
  	<%= attachment_image_tag @post, :post_image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg", size: "300x300" %>
  	<button type="button" class="btn btn-outline-secondary rounded-pill">
    	<%= f.file_field :post_image, accept: 'image/jpeg,image/gif,image/png' %>
  	</button>
  	</div>

  	<div class="actions">
    	<%= f.submit "投稿" %>
  	</div>
<% end %>