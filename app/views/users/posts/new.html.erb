<%= form_for(@post) do |f| %>
 	<%= render "users/shared/error_messages", resource: @post %>

  	<div class="field">
    	<%= f.label :value %><br />
    	<%= f.number_field :value, autofocus: true, autocomplete: "value" %>
  	</div>

  	<div class="field">
    	<%= f.label :body %><br />
    	<%= f.text_area :body, autofocus: true, autocomplete: "body" %>
  	</div>

  	<div class="actions">
    	<%= f.submit "投稿" %>
  	</div>
<% end %>