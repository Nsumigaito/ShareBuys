<div class = "container">
  <div class = "row mt-5">
    <div class = "col-md-12">
      <div class = "posts w-100 mb-1" style ="background-color:#cbffd3;border:1px solid limegreen;">
        <%= render 'users/template/posts_show', post: @post %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-12">
      <%= form_with model: [@post, @post_comment] do |f| %>
        <%= f.text_area :comment, class: 'w-100' %>
        <%= f.submit "送信する", class: 'btn btn-outline-primary' %>
      <% end %>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-md-12">
      <%= render 'users/template/comment_posts_show', post: @post %>
    </div>
  </div>
</div>