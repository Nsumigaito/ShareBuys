<%= link_to '⬅︎', :back %>

<%= form_for(@user , url: profile_update_path, method: :patch) do |f| %>
 	<%= render "users/shared/error_messages", resource: @user %>

  	<div class="field">
    	<%= f.label :name %><br />
    	<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  	</div>

  	<div class="field">
    	<%= f.label :introduction %><br />
    	<%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  	</div>

  	<% if @user.image? %>
  		<%= image_tag @user.image.url, :size => '100x100' %>
	<% else %>
  		<%= image_tag "/assets/no_image.jpg", :size => '100x100' %>
	<% end %>
  	<button type="button" class="btn btn-outline-secondary rounded-pill">
    	<%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
  	</button>

  	<div class="actions">
    	<%= f.submit "Update" %>
  	</div>
<% end %>